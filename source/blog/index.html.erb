---
pageable: true
per_page: 10
---

<div id="blog" role="main" class="blog-container">
  <section class="blog-header">
    <%= image_tag "coffee-blog.png", class: "blog-header-logo" %>
    <div class="blog-header-text">
      <h1 class="blog-header-text-title">
        General Thoughts
      </h1>
      <p class="blog-header-text-subtitle">
        Musings about tech, design, and life in the Bay
      </p>
    </div>
  </section>
    <%= partial "layouts/partials/nav" %>
  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <ul>
    <% page_articles.each_with_index do |article, i| %>
      <li class="post">
        <h3 class="post-title"><%= link_to article.title, article %></h3>
        <h5 class="post-date"><%= article.date.strftime('%b %e') %></h5>
        <p><%= article.body %></p>
      </li>
    <div class="post-end">
      <%= image_tag "coffee-blog.png", class: "post-end-image" %>
    </div>
    <% end %>
  </ul>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>
