
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Blog" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

    <!-- Blog feed -->
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>

<%= partial "layouts/partials/nav" %>
<div id="blog" role="main" class="blog-container">
  <body class="<%= page_classes %>">
      <h3 class="post-title"><%= current_article.title %></h3>
      <h5 class="post-date"><%= current_article.date.strftime('%b %e, %Y') %></h5>
      <%= yield %>
    </div>
  </body>
<%= partial "layouts/partials/footer" %>
<%= partial "layouts/partials/analytics" %>
</html>
